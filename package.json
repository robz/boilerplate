{
  "version": "0.0.1",
  "main": "src/main.js",
  "dependencies": {
    "babel-jest": "*",
    "react": "*"
  },
  "scripts": {
    "build": "mkdir build 2> /dev/null; browserify src/main.js -t babelify | uglifyjs -am > build/bundle.js",
    "check": "flow check src --profile",
    "test": "jest",
    "watch": "mkdir build 2> /dev/null; watchify src/main.js -t babelify -o build/bundle.js -v -d"
  },
  "devDependencies": {
    "babelify": "5.0.4",
    "browserify": "^6.2.0",
    "jest-cli": "^0.2.1",
    "uglify-js": "2.4.16",
    "watchify": "2.2.1",
    "babel": "4.7.8"
  },
  "jest": {
    "scriptPreprocessor": "./node_modules/6to5-jest",
    "unmockedModulePathPatterns": ["./node_modules/react"]
  }
}
